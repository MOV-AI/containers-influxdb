# InfluxDB Configuration Examples
# Copy this to .env and modify as needed

# InfluxDB Version
INFLUXDB_VERSION=1.12.2-alpine

# Database Configuration
INFLUX_DATABASE=telegraf logs metrics
INFLUX_DATABASE_RETENTION=7d
INFLUX_DATABASE_REPLICATION=1
INFLUX_DATABASE_SHARD_DURATION=1h

# Admin User (recommended for production)
#INFLUXDB_ADMIN_USER=admin
#INFLUXDB_ADMIN_PASSWORD=secure_password_here

# Memory Optimization (adjust based on available RAM)
INFLUXD_REPORTING_DISABLED=true
INFLUXD_STORAGE_CACHE_MAX_MEMORY_SIZE=419430400
INFLUXD_STORAGE_CACHE_SNAPSHOT_WRITE_COLD_DURATION=120s
INFLUXD_STORAGE_COMPACT_FULL_WRITE_COLD_DURATION=1h0m0s
INFLUXD_STORAGE_COMPACT_THROUGHPUT_BURST=8388608
INFLUXD_STORAGE_MAX_CONCURRENT_COMPACTIONS=2
INFLUXD_STORAGE_SERIES_FILE_MAX_CONCURRENT_SNAPSHOT_COMPACTIONS=2

# Timezone
TZ=UTC